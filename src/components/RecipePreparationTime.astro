---
const {items} = Astro.props;

type Item = {
    title: string;
    content:string;
}
---

<div class="bg-[#FFF7FB] p-7 md:p-7 rounded-xl">
    <h3 class="text-xl text-[#7A284E] font-semibold mb-4">Preparation time</h3>
    <ul class="list-disc">
        {items.map((item:Item, index:number) => (
            <li class="text-[#5F564D] font-normal mb-2"><span class="font-bold text-md ">{item.title+': '}</span>{item.content}</li>
        ))}
    </ul>
</div>

<style>
    h3 {
        font-family: 'Outfit Variable', sans-serif;
    }
    ul{
        list-style-position: inside;
    }
    li {
        font-family: 'Outfit Variable', sans-serif;
    }
    li::marker {
  color: #7A284E;
}
</style>